<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.root.musclediary.ResultScreen"
    tools:showIn="@layout/activity_result_screen">

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.jjoe64.graphview.GraphView
            android:layout_height="200dip"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/graph" />

        <!--<com.github.mikephil.charting.charts.LineChart-->
            <!--android:id="@+id/graph"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dip" />-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/progressBarsvalue"
        android:layout_height="fill_parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/graph"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textSize="25sp"
            android:text="Efficiency"
            />

        <TextView
            android:id="@+id/active"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textSize="15sp"
            android:text="Active training"
            />

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:animated="true"
            app:bootstrapBrand="warning"
            app:bootstrapProgress="78"
            app:striped="true"
            />

        <TextView
            android:id="@+id/peek"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textSize="15sp"
            android:text="Peak value"
            />

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:id="@+id/peekvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:animated="true"
            app:bootstrapBrand="warning"
            app:bootstrapProgress="78"
            app:striped="true"
            />

        <TextView
            android:id="@+id/average"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textSize="15sp"
            android:text="Average EMG"
            />

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:animated="true"
            android:layout_marginBottom="20dp"
            app:bootstrapBrand="warning"
            app:bootstrapProgress="78"
            app:striped="true"
            />

        <Button
            android:id="@+id/buttonConnect"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:background="@color/colorButton"
            android:text="Save Result"
            android:layout_marginBottom="30dp"
            android:textColor="#ffffff" />

    </LinearLayout>

    </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarimg"
            android:theme="@style/AppCompatAlertDialogStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center" />

    </FrameLayout>




</android.support.v4.widget.NestedScrollView>
